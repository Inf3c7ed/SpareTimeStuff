#include <iostream>

using namespace std;                   //6! = 6.5.4.3.2.1


int main(int argc, const char * argv[]) {
    cout << "Please enter factoriel number: ";
    int input;
    cin >> input;
    
    int result = 1;
    
    for (int i = 1; i <= input; i++)
    {
        
        if (input == 0) {
            cout << "Invalid number!";
            result = 1;
            break;
        }
        
        result *= i;
        
    }
    
    cout << "The result is: " << result<< endl;
    
}
